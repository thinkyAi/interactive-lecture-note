<div class="modal fade" id="courseModule" tabindex="-1"
     aria-labelledby="courseModuleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg ">
        <div class="modal-content modal-color">
            <div class="modal-header">
                <h5 class="modal-title text-white ms-3" id="courseModuleLabel">
                    <i class="bi bi-book me-1"></i>
                    Course Outline - Module
                </h5>
                <button type="button" class="btn-close bg-white"
                        data-bs-dismiss="modal"
                        aria-label="close">
                </button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div id="module" class="mb-2 ">
                        <hr class="border-white">
                        <div class="row">
                            <div class="col-lg-3">
                                <div id="timeline" class="mb-4">
                                    <p class="text-white-50 fs-6">
                                        <i class="bi bi-clock-history"></i>
                                        Timeline
                                    </p>
                                    <hr class="border-white">
                                    <div class="text-white">
                                        <div class="mb-3">
                                            <label for="" class="">Week</label>
                                            <input type="text" id=""
                                                   placeholder=""
                                                   class="form-control bg-transparent rounded-0 text-white"
                                                   value="WEEK 1" disabled>
                                        </div>
                                        <div class="mb-3">
                                            <label for="stat">Start Date</label>
                                            <input type="datetime-local"
                                                   name="" id="stat"
                                                   class="form-control bg-transparent rounded-0 text-white">
                                        </div>
                                        <div class="mb-3">
                                            <label for="end">End Date (Optional)</label>
                                            <input type="datetime-local"
                                                   name="" id="end"
                                                   class="form-control bg-transparent rounded-0 text-white">
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-9 gap-1 border-start  " style="background-color: #000c19">
                                <p class="text-white-50 fs-6"><i
                                            class="bi bi-journal-bookmark "></i>
                                    Lecture Module
                                </p>
                                <hr class="border-white">
                                <div class="row text-white mb-3">
                                    <div class="col-lg-12">
                                        <label for="topic">Enter Module Name:</label>
                                        <input type="text" name=""
                                               id="topic"
                                               class="form-control bg-transparent rounded-0 text-white">
                                    </div>

                                </div>
                                <div class="mb-3">
                                    <label for="des" class="text-white">Briefly
                                        describe the topic:</label>
                                    <div class="form-floating">
                                                <textarea name="" id="des"
                                                          class="form-control bg-transparent text-white rounded-0"
                                                          placeholder="Briefly "
                                                          style="min-height: 115px"></textarea>
                                        <label for="des"
                                               class="text-white-50">Description:</label>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="des" class="text-white">Objective:</label>
                                    <div class="form-floating">
                                                <textarea name="" id="des"
                                                          class="form-control bg-transparent text-white rounded-0"
                                                          placeholder="Briefly "
                                                          style="min-height: 115px"></textarea>
                                        <label for="des"
                                               class="text-white-50">Learning Outcome:</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="border-white">
                    <div class="d-flex justify-content-between mt-3">
                        <div class="d-grid w-25 btn-wrapper module btn-prev">
                            <button type="submit"
                                    class="btn  cs-btn-2 text-white p-2 shadow">
                                Cancel
                            </button>
                        </div>
                        <div class="d-grid btn-wrapper  "
                             style="width: 45%">
                            <button type="submit"
                                    class="btn  cs-btn-2 fw-bold text-white p-2 shadow">
                                Quickly Create Module Note
                            </button>
                        </div>
                        <div class="d-grid w-25 btn-wrapper">
                            <button type="submit"
                                    class="btn  cs-btn-2 text-white p-2 shadow">
                                Later
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>